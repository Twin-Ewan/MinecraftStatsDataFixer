{
  "compilerOptions": {
    "target": "ES2017",
    "module": "None",
    "rootDir": "./src",
    "outDir": "./build",

    "strict": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "lib": ["DOM", "ES2017"]
  },
  "include": ["src/*/"]
}